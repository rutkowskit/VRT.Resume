@model PersonEducationViewModel

<div class="profile-person-data">
    @using (Html.BeginForm("Save", null, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.EducationId);

        <fieldset class="border form-row">
            <legend>@Html.GetLabel(LabelNames.MainInfo)</legend>
            @Html.FormGroupWithFullEditorFor(model => model.SchoolName, "col-md-7")
            @Html.FormGroupWithFullEditorFor(model => model.Field, "col-md-5")
            @Html.FormGroupWithFullEditorFor(model => model.FromDate, "col-md-3")
            @Html.FormGroupWithFullEditorFor(model => model.ToDate, "col-md-3")        
        </fieldset>

        <fieldset class="border form-row mt-2 mb-3">
            <legend>@Html.GetLabel(LabelNames.Details)</legend>
            @Html.FormGroupWithFullEditorFor(model => model.Specialization, "col-md-12")
            @Html.FormGroupWithFullEditorFor(model => model.ThesisTitle, "col-md-12")
            @Html.FormGroupWithFullEditorFor(model => model.Degree, "col-md-4")
            @Html.FormGroupWithFullEditorFor(model => model.Grade, "col-md-4")        
        </fieldset>

        @await Html.PartialAsync("_SaveCancelFieldset")
        <section class="mt-3 text-danger">
            @Html.ValidationSummary()
        </section>
    }
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}