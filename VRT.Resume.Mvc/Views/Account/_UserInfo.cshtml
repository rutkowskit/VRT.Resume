@{
    var userInfo = User.AsUserLoginViewModel();
    if (userInfo == null)
    {
        return;
    }
    <div class="card" style="width:300px">
        <img class="card-img-top" src="@Url.Action("ProfileImage", "Images")" alt="Card image">
        <div class="card-body">
            <h4 class="card-title">@string.Format("{0} {1}", userInfo.FirstName, userInfo.LastName)</h4>
            <p class="card-text">@userInfo.Email</p>
            @{await Html.RenderPartialAsync("_SignOutButton");}
        </div>
    </div>
}