@if (User.Identity.IsAuthenticated)
{
    <legend>@Html.GetMessage(MsgNames.UserSignedIn)</legend>
    <div class="position-absolute">
        @using (Html.BeginForm("SignOut", "Account", new { returnUrl = "~/" }))
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-primary btn-block" id="sign-out-button" name="type"
                    title="Sign out the user">
                @Html.GetLabel(LabelNames.SignOut)
            </button>
        }
    </div>
    <div class="no-padding">
        <section id="userInfo">
            @Html.Partial("_UserInfo")
        </section>       
    </div>
}
else
{
    <div class="col-md-4">
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial")
        </section>
    </div>
}


